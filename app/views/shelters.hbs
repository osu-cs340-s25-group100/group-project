<h1>Shelters</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each shelters.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the data for the pet }}
        {{#each shelters}}
        <tr>
            <td>{{this.location_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.city}}</td>
            <td>{{this.state}}</td>
            <td>{{this.zip}}</td>

            {{! DELETE form }}
            <form id='delete_pet_form'>
                <input type='hidden' name='delete_pet_id' value='{{this.pet_id}}' />
                <input type='hidden' name='delete_pet_name' value='{{this.name}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>