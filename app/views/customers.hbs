<h1>Customers</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each customers.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the data for the customer }}
        {{#each customers}}
        <tr>
            <td>{{this.customer_id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.city}}</td>
            <td>{{this.state}}</td>
            <td>{{this.zip}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.email}}</td>

            {{! DELETE form }}
            <form id='delete_customer_form' method='POST' action='/customers/delete'>
                <input type='hidden' name='delete_customer_id' value='{{this.customer_id}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="CRUD_forms">
    <div id="create_customer_form_div">

        {{! CREATE form }}
        <h2>Create a Customer</h2>
        <form class='cuForm' id='create_customer_form' method='POST' action='/customers/create'>
            {{! Name }}
            <label for='create_customer_name'>Name: </label>
            <input type='text' name='create_customer_name' id='create_customer_name' required />
            <br>
             {{! Address }}
            <label for='create_customer_address'>Address: </label>
            <input type='text' name='create_customer_address' id='create_customer_address' required />
            <br>
             {{! City }}
            <label for='create_customer_city'>City: </label>
            <input type='text' name='create_customer_city' id='create_customer_city' required />
            <br>
             {{! State }}
            <label for='create_customer_state'>State: </label>
            <input type='text' name='create_customer_state' id='create_customer_state' required />
            <br>
             {{! Zip }}
            <label for='create_customer_zip'>Zip: </label>
            <input type='text' name='create_customer_zip' id='create_customer_zip' required />
            <br>
             {{! Phone }}
            <label for='create_customer_phone'>Phone: </label>
            <input type='tel' name='create_customer_phone' id='create_customer_phone' required />
            <br>
             {{! Email }}
            <label for='create_customer_email'>Email: </label>
            <input type='email' name='create_customer_email' id='create_customer_email' required />
            <br>
            <input type='submit' />
        </form>
    </div>

    <div id="update_customer_form_div">

        {{! UPDATE form }}
        <h2>Update a Customer</h2>
        <form class='cuForm' id='update_customer_form' method='POST' action='/customers/update'>
            <label for='update_customer_id'>Customer to Update: </label>
            {{! Customer ID }}
            <select name='update_customer_id' id='update_customer_id' required>
                <option value='' disabled selected>Select a Customer</option>
                {{#each customers}}
                <option value='{{this.customer_id}}'>
                    {{this.customer_id}}
                    -
                    {{this.name}}
                </option>
                {{/each}}
            </select>
            <br>
            {{! Name }}
            <label for='update_customer_name'>Name: </label>
            <input type='text' name='update_customer_name' id='update_customer_name' required />
            <br>
             {{! Address }}
            <label for='update_customer_address'>Address: </label>
            <input type='text' name='update_customer_address' id='update_customer_address' required />
            <br>
             {{! City }}
            <label for='update_customer_city'>City: </label>
            <input type='text' name='update_customer_city' id='update_customer_city' required />
            <br>
             {{! State }}
            <label for='update_customer_state'>State: </label>
            <input type='text' name='update_customer_state' id='update_customer_state' required />
            <br>
             {{! Zip }}
            <label for='update_customer_zip'>Zip: </label>
            <input type='text' name='update_customer_zip' id='update_customer_zip' required />
            <br>
             {{! Phone }}
            <label for='update_customer_phone'>Phone: </label>
            <input type='tel' name='update_customer_phone' id='update_customer_phone' required />
            <br>
             {{! Email }}
            <label for='update_customer_email'>Email: </label>
            <input type='email' name='update_customer_email' id='update_customer_email' required />
            <br>
            <input type='submit' />
        </form>
    </div>
</div>